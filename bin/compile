#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

topic "Cleaning .ssh permissions"
chmod 755 $BUILD_DIR/.ssh
set +e
chmod 600 $BUILD_DIR/.ssh/id_*
set -e

topic "Installing ssh build wrapper"
BINDIR=`mktemp -dt tmpbuildbindirXXXXXXXXXX`
echo using $BINDIR | indent
cat > "$BINDIR/ssh" <<EOF
#!/bin/bash
exec /usr/bin/ssh -F $BUILD_DIR/.ssh/config -i `ls -1 $BUILD_DIR/.ssh/id_* | grep -Fv .pub | head -n1` -o StrictHostKeyChecking=no "\$@"
EOF
chmod +x "$BINDIR/ssh"

topic "Adding $BINDIR/ssh to $PATH"
cat > "$LP_DIR/export" <<EOF
PATH="$BINDIR${PATH:+:$PATH}"
EOF
cat "$LP_DIR/export" | indent
