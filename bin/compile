#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# debug
# set -x

# parse and derive params
BUILD_DIR=$1
CACHE_DIR=$2
LP_DIR=`cd $(dirname $0); cd ..; pwd`

function error() {
  echo " !     $*" >&2
  exit 1
}

function topic() {
  echo "-----> $*"
}

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

topic "Cleaning .ssh permissions"
chmod 755 $BUILD_DIR/.ssh
set +e
chmod 600 $BUILD_DIR/.ssh/id_*
set -e

topic "Setting HOME to $BUILD_DIR for .ssh"
export HOME=$BUILD_DIR
echo echo \"declare -x HOME=$BUILD_DIR\" > \"$LP_DIR/export\" | indent
echo "declare -x HOME=$BUILD_DIR" > "$LP_DIR/export"
